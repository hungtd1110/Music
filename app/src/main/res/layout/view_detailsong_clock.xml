<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/all_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="@dimen/margin_clock_5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout_clock_default"
        android:layout_marginTop="@dimen/margin_clock_15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:layout_marginLeft="@dimen/margin_clock_15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radiobutton_clock_30"
                android:layout_weight="1"
                android:text="30'"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/radiobutton_clock_45"
                android:layout_weight="1"
                android:text="45'"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/radiobutton_clock_60"
                android:layout_weight="1"
                android:text="60'"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/radiobutton_clock_90"
                android:layout_weight="1"
                android:text="90'"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/margin_clock_5dp"
        android:layout_marginLeft="@dimen/margin_clock_20dp"
        android:layout_marginRight="@dimen/margin_clock_15dp"
        android:layout_marginBottom="@dimen/margin_clock_5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearlayout_clock_time"
            android:layout_weight="8"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/clock_action"
                android:textSize="@dimen/textsize_clock_action"
                android:textColor="@color/clock_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <EditText
            android:id="@+id/editext_clock_time"
            android:inputType="number"
            android:gravity="right"
            android:visibility="invisible"
            android:layout_weight="2"
            android:textSize="@dimen/textsize_clock_time"
            android:layout_gravity="top"
            android:textColor="@color/clock_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    
</LinearLayout>
