<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageview_search_logo"
            android:layout_centerVertical="true"
            android:src="@mipmap/search_logo"
            android:layout_width="@dimen/size_search_48dp"
            android:layout_height="@dimen/size_search_48dp" />

        <TextView
            android:id="@+id/textview_search_name"
            android:layout_toLeftOf="@id/imageview_search_delete"
            android:layout_toRightOf="@+id/imageview_search_logo"
            android:layout_centerVertical="true"
            android:text="name"
            android:textSize="@dimen/textsize_search_name"
            android:textColor="@color/search_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imageview_search_delete"
            android:layout_centerVertical="true"
            android:src="@mipmap/search_delete"
            android:padding="@dimen/padding_search_5dp"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/size_search_48dp"
            android:layout_height="@dimen/size_search_48dp" />

    </RelativeLayout>

</LinearLayout>
