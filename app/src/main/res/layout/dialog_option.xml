<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/all_background">

    <TextView
        android:text="@string/option_title"
        android:layout_marginTop="@dimen/margin_option_15dp"
        android:layout_marginLeft="@dimen/margin_option_15dp"
        android:layout_marginBottom="@dimen/margin_option_25dp"
        android:textSize="@dimen/textsize_option_title"
        android:textColor="@color/option_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_option_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>
