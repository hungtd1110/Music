<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/all_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageview_option_image"
            android:layout_centerVertical="true"
            android:src="@mipmap/option_add"
            android:layout_width="@dimen/size_option_48dp"
            android:layout_height="@dimen/size_option_48dp" />

        <TextView
            android:id="@+id/textview_option_option"
            android:layout_toRightOf="@id/imageview_option_image"
            android:text="Thêm vào playlist"
            android:layout_marginLeft="@dimen/margin_option_15dp"
            android:layout_centerVertical="true"
            android:textSize="@dimen/textsize_option_option"
            android:textColor="@color/option_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>
