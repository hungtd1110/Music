<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:dragEdge="right">

    <!--layout bottom-->
    <LinearLayout
        android:layout_gravity="right"
        android:paddingTop="@dimen/padding_singer_10dp"
        android:layout_width="@dimen/width_singer_delete"
        android:layout_height="@dimen/height_singer_delete">

        <ImageView
            android:id="@+id/imageview_singer_delete"
            android:src="@mipmap/all_delete"
            android:padding="@dimen/padding_singer_10dp"
            android:background="@color/all_delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <!--layout show-->
    <RelativeLayout
        android:paddingTop="@dimen/padding_singer_10dp"
        android:background="@color/all_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageview_singer_image"
            android:src="@drawable/all_image"
            android:scaleType="fitXY"
            android:layout_width="@dimen/width_singer_image"
            android:layout_height="@dimen/height_singer_image" />

        <RelativeLayout
            android:layout_toRightOf="@+id/imageview_singer_image"
            android:layout_marginLeft="@dimen/margin_singer_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textview_singer_name"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="@dimen/textsize_singer_name"
                android:text="Tên ca sĩ rất là dài và sẽ xuống dòng"
                android:textColor="@color/singer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textview_singer_total"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/textsize_singer_total"
                android:layout_below="@+id/textview_singer_name"
                android:text="N bài hát"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </RelativeLayout>

</com.chauthai.swipereveallayout.SwipeRevealLayout>
