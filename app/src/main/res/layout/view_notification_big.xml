<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/all_background">

    <ImageView
        android:id="@+id/imageview_notification_image"
        android:src="@drawable/all_imagesong"
        android:scaleType="fitXY"
        android:layout_width="@dimen/size_notification_96dp"
        android:layout_height="@dimen/size_notification_96dp" />

    <LinearLayout
        android:layout_toRightOf="@+id/imageview_notification_image"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/margin_notification_10dp"
        android:layout_marginRight="@dimen/margin_notification_10dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_notification_96dp">

        <LinearLayout
            android:layout_weight="4"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textview_notification_name"
                android:layout_marginTop="@dimen/margin_notification_2dp"
                android:text="Tên bài hát rất là dài và sẽ cho nó xuống dòng "
                android:textSize="@dimen/textsize_notification_name"
                android:textColor="@color/notification_name"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textview_notification_singer"
                android:text="singer"
                android:textColor="@color/notification_singer"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/textsize_notification_singer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="7"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:background="@color/notification_separate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_notification_0.1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageview_notification_previous"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/notification_previous"
                    android:layout_width="@dimen/size_notification_32dp"
                    android:layout_height="@dimen/size_notification_32dp" />

                <ImageView
                    android:id="@+id/imageview_notification_run"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/notification_pause"
                    android:layout_width="@dimen/size_notification_32dp"
                    android:layout_height="@dimen/size_notification_32dp" />

                <ImageView
                    android:id="@+id/imageview_notification_next"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/notification_next"
                    android:layout_width="@dimen/size_notification_32dp"
                    android:layout_height="@dimen/size_notification_32dp" />

                <ImageView
                    android:id="@+id/imageview_notification_close"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/notification_close"
                    android:layout_width="@dimen/size_notification_32dp"
                    android:layout_height="@dimen/size_notification_32dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
