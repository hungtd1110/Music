<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/all_background">

    <TextView
        android:id="@+id/textview_list_total"
        android:layout_marginTop="@dimen/margin_list_15dp"
        android:layout_marginLeft="@dimen/margin_list_15dp"
        android:layout_marginBottom="@dimen/margin_list_25dp"
        android:text="Danh sách phát: n bài"
        android:textColor="@color/list_total"
        android:textSize="@dimen/textsize_list_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_list_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>
