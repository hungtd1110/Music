<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/all_background">

    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/padding_option_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/option_title_edit"
            android:layout_marginLeft="@dimen/margin_option_5dp"
            android:layout_marginBottom="@dimen/margin_option_10dp"
            android:textColor="@color/option_title"
            android:textSize="@dimen/textsize_option_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editext_option_content"
            android:layout_marginBottom="@dimen/margin_option_15dp"
            android:padding="10dp"
            android:textSize="@dimen/textsize_option_name"
            android:textColor="@color/option_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textview_option_create"
                android:layout_marginRight="@dimen/margin_option_5dp"
                android:layout_alignParentRight="true"
                android:text="@string/option_create"
                android:textColor="@color/option_create"
                android:textSize="@dimen/textsize_option_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textview_option_cancel"
                android:layout_toLeftOf="@+id/textview_option_create"
                android:layout_marginRight="@dimen/margin_option_30dp"
                android:text="@string/option_cancel"
                android:textColor="@color/option_cancel"
                android:textSize="@dimen/textsize_add_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
